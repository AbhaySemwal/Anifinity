<%-include("partials/header");-%>
<%-include("partials/navbar");-%>

    <section class="vh-100 login-page" style="background-color: #0f0e0e;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card bg-dark" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block ">
              <img src="\image\teahub.io-anime-wallpaper-phone-112056.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form method="post" action="/login">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <img class="logo" src="\image\Anifinity-1 (1).png" alt="logo">
                    <span class="h1 fw-bold mb-0 brand" style="padding-left: 0.5rem;">Anifinity</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="color: white ;letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <input type="email" name="username" id="form2Example17" class="form-control form-control-lg" placeholder="email@gmail.com"/>
                    <label class="form-label" for="form2Example17">Email</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" placeholder="Password" />
                    <label class="form-label" for="form2Example27">Password</label>
                  </div>

                  <div class="pt-1 mb-4 sign-in">
                    <span>
                      <button class="btn btn-light btn-lg btn-block" type="submit">Login</button>
                       OR 
                      <button class="btn btn-light btn-lg btn-block google" onclick="location.href='/auth/google'"><i class="fa-brands fa-google"></i> | Sign in with Google</button>
                    </span>
                  </div>

                  <a class="small text-muted" href="#!">Forgot password?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/register"
                      style="color: #393f81;">Register here</a></p>
                  <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="\index.js"></script>
</body>
</html>